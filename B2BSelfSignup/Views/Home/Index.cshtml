@{
    ViewData["Title"] = "Home Page";
}

@section Scripts {
    <script>
        rs = window.setTimeout(function () {
                clearTimeout(rs);
                window.location.href = "@Model.RedirectUrl";
            }, 3000);
    </script>
}

<div class="text-center">
    @if (Model.ShowMessage)
    {
        <p>
            @Model.Message
        </p>
    }
    @if (Model.ShowRedirectUrl)
    {
        <p>You will now be redirected to the following site.</p>
        <p><a href=@Model.RedirectUrl>@Model.RedirectUrl</a></p>
    }
</div>

